<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: <%= customer.fullName %></h1>
  </div>
  
<div class="col py-3">
  <div class="row">
    <div class="col">
      
    </div>
  </div>
  
</div>
  
  


  <form action="/edit/<%= customer._id %>?_method=PUT" method="POST">
    
    <div class="row">
      <div class="split left">
  

        <div class="col">
          <label for="Id">Id</label>
          <input type="number" class="form-control" id="Id" name="Id" value="<%= customer.Id %>" placeholder="Id" required>
        </div>
        
        <div class="col">
          <label for="fullName">Name</label>
          <input type="text" class="form-control" id="fullName" name="fullName" value="<%= customer.fullName %>" placeholder="full Name" required>
        </div>
        
        <div class="col">
          <label for="Contact">Contact</label>
          <input type="text" class="form-control" id="Contact" name="Contact" value="<%= customer.Contact %>" placeholder="Contact" required>
        </div>
        <div class="col">
          <label for="phoneNumber">Phone Number</label>
        <input type="number" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= customer.phoneNumber %>" placeholder="phoneNumber" required>
      </div>
      
      <div class="col">
        <label for="email">Email</label>
        <input type="text" class="form-control" id="email" name="email" value="<%= customer.email %>" placeholder="Email" required>
      </div>
      <div class="col">
        <label for="webId">Web Id</label>
        <input type="text" class="form-control" id="webId" name="webId" value="<%= customer.webId %>" placeholder="web Id" required>
      </div>
      <div class="col">
        <label for="amount">Amount</label>
        <input type="text" class="form-control" id="amount" name="amount" value="<%= customer.amount %>" placeholder="amount" required>
      </div>
      <div class="col">
        <label for="exp">Date Of Exception</label>
        <input type="date" class="form-control" id="exp" name="exp" value="<%= customer.exp %>" placeholder="exp" required>
      </div>
      
      <button type="submit" class="btn btn-primary">Update User</button>
      
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete user</button>
      
    
    </div>
  </div>

  
</form>



<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a User record.</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <p>
            This will remove the user record of <b class="fw-bold"><%= customer.fullName %> </b><br/>
            
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= customer._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Yes, Remove Customer</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="split right">
    <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">PAYMENT</h1>
      <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
          <div class="btn-group me-2">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAddLabel" data-bs-whatever="date">+ Payment</button>
          </div>
        </div>
      </div>
    </div>

    <ul class="list-group">

        <li class="list-group-items">
          <div class="row">
            <div class="col" style="max-width: 140px"><b>Date:</b></div>
            <div class="col"><%= customer.date %></div>
          </div>
        </li>
        <li class="list-group-items">
          <div class="row">
            <div class="col" style="max-width: 140px"><b>Amount:</b></div>
            <div class="col"><%= customer.amt %></div>
          </div>
        </li>
    </ul>
  </div>
  <div class="modal fade" id="modalAddLabel" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="modalAddLabel">Add new Payment</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/edit/<%= customer._id %>?_method=PUT" method="POST" class="position-relative">
            <div class="col">
              <label for="date">Date</label>
              <input type="date" class="form-control" id="date" name="date" value="<%= customer.date %>" placeholder="ddmmyyyy" required>
            </div>
            <div class="col">
              <label for="amt">Amount</label>
              <input type="amt" class="form-control" id="amt" name="amt" value="<%= customer.amt %>" placeholder="Amount" required>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">save</button>
        </div>
      </div>
    </div>
  </div>